<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rest_detail_top_ll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/btn_orange_style">

        <TextView
            android:id="@+id/rest_detail_name_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:textColor="@android:color/white"
            android:textSize="12pt"
            android:gravity="center" />

        <Button
            android:id="@+id/rest_detail_refresh"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_refresh_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/rest_detail_info_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/rest_list_tab"
            android:text="INFO"
            android:textSize="8pt"
            android:textColor="#FCA14C"/>
        <Button
            android:id="@+id/rest_detail_notice_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/rest_list_tab_2"
            android:text="NOTICE"
            android:textSize="8pt"
            android:textColor="#FCA14C"/>
        <Button
            android:id="@+id/rest_detail_custom_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/rest_list_tab_2"
            android:text="BOARD"
            android:textSize="8pt"
            android:textColor="#FCA14C"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        tools:context="com.example.whererhyu_proto.Rest_Activity" />

</LinearLayout>