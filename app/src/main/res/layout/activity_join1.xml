<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_join"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hong_inseon.projectlouvre.JoinActivity1">

    <TextView
        android:text="EMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="167dp"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/emailinput"
        android:layout_marginEnd="34dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/emailinput"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:hint="abc@def.gh"/>

    <TextView
        android:text="PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailinput"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="14dp"
        android:id="@+id/textView6"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/emailinput"
        android:layout_alignEnd="@+id/emailinput"
        android:id="@+id/pwinput"
        android:hint="********"/>

    <TextView
        android:text="NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/pwinput"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="11dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/pwinput"
        android:layout_alignStart="@+id/pwinput"
        android:id="@+id/nameinput"
        android:hint="김신"/>

    <TextView
        android:text="GENDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/nameinput"
        android:layout_alignStart="@+id/textView7"/>
    <RadioButton
        android:text="남"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbm"
        android:layout_below="@+id/nameinput"
        android:layout_alignStart="@+id/nameinput"/>
    <RadioButton
        android:text="여"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbf"
        android:layout_below="@+id/nameinput"
        android:layout_toEndOf="@+id/rbm"
        android:layout_marginStart="17dp"/>

    <Button
        android:text="JOIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbm"
        android:layout_toEndOf="@+id/rbm"
        android:layout_marginTop="42dp"
        android:id="@+id/joinbtn"/>

    <Button
        android:text="CANCLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/joinbtn"
        android:layout_toStartOf="@+id/joinbtn"
        android:id="@+id/canclebtn"/>

</RelativeLayout>
